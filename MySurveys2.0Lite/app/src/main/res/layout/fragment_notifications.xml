<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/notification_container"
    tools:context="com.opg.my.surveys.Fragments.NotificationsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title_notification"
            android:layout_alignParentLeft="true"
            style="@style/tv_title_notification_style"/>

        <TextView
            style="@style/notifications_delete_style"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_delete"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notification_recycler_view"
        style="@style/notification_recycler_view_style"/>

    <TextView
        android:id="@+id/tv_no_notification"
        style="@style/tv_no_notification_style" />


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
    <TextView
        android:id="@+id/tv_please_enter_email"
        style="@style/tv_please_enter_email_style"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/edt_forgot_password"
            style="@style/et_forgot_password_style"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_confirm_forgot_password"
        style="@style/btn_confirm_forgot_password"
        android:layout_below="@id/input_layout_forgot_password"
       />
</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.opg.my.surveys.ForgotPasswordActivity">
    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/container_forgot_password"
            style="@style/container_forgot_password_style">

            <ImageView
                style="@style/key_image_style"
                app:srcCompat="@drawable/key_icon"
                android:id="@+id/imageView" />

            <TextView
                android:id="@+id/forgot_pwd_mainTitle"
                style="@style/tv_forgot_password"/>

            <ImageView
                style="@style/sur_det_back_img_sty"
                android:id="@+id/btn_back" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btm_container_forgot_password"
            style="@style/btm_container_forgot_password_style" >
            <TextView
                android:id="@+id/forgot_pwd_subTitle"
                style="@style/forgot_pwd_subTitle_style"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_forgot_password"
                style="@style/text_input_forgot_password">
                <EditText
                    android:id="@+id/edt_forgot_password"
                    style="@style/et_forgot_password_style" />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/btn_send_forgot_password"
                style="@style/btn_confirm_forgot_password" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/logout_dialog_style">
    <TextView
        android:id="@+id/tv_title_logout_dialog"
        style="@style/tv_you_want_to_logout_style" />
    <ProgressBar
        android:id="@+id/pb_upload_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    <Button
        android:layout_below="@+id/tv_title_logout_dialog"
        android:text="@string/okay"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="@dimen/secondary_text_size"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:id="@+id/btn_confirm_logout"/>

    <Button
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/colorPrimary"
        android:id="@+id/btn_cancel_logout"
        android:textSize="@dimen/secondary_text_size"
        android:layout_below="@+id/tv_title_logout_dialog"
        android:layout_toLeftOf="@+id/btn_confirm_logout"
        />
</RelativeLayout>


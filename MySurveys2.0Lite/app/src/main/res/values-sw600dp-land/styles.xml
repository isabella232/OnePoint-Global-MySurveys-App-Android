<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="login_logo_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="img_logo_style">
        <item name="android:layout_width">396dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">fitCenter</item>
        <!--<item name="android:layout_alignParentTop">true</item>-->
    </style>

    <style name="tv_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:layout_alignParentTop">true</item>-->
        <item name="android:textSize">@dimen/header_text_size_log_in</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="et_password_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:hint">@string/hint_password</item>
        <item name="android:background">@drawable/singleline_et_bg_white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="login_input_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:layout_marginRight">100dp</item>
        <item name="android:layout_centerInParent">true</item>

    </style>
    <style name="et_username_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/hint_username</item>
        <item name="android:background">@drawable/singleline_et_bg_white</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_centerInParent">true</item>
    </style>


    <style name="login_input_layout_pwd_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:layout_marginRight">100dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_centerInParent">true</item>

    </style>



    <style name="btn_login_style">
        <item name="android:layout_height">wrap_content</item><!-- -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@android:color/white</item>
        <!-- <item name="android:background">@drawable/login_btn_bg</item>-->
        <item name="android:text">@string/login</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginTop">37dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:foregroundGravity">center</item>
    </style>

    <style name="social_btn_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">9dp</item>
    </style>
    <style name="btn_google_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/google_sign_in</item>
        <item name="android:background">@drawable/google_login_shape</item>
        <item name="android:text">@string/sign_in_google_plus</item>
        <item name="android:drawableLeft">@drawable/google_logo</item>
        <item name="android:textSize">19sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">85dp</item>
        <item name="android:layout_marginLeft">85dp</item>
    </style>

    <style name="btn_facebook_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/fb_login_shape</item>
        <item name="android:text">@string/sign_in_facebook</item>
        <item name="android:drawableLeft">@drawable/fb_logo</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginRight">85dp</item>
        <item name="android:layout_marginLeft">85dp</item>

    </style>

    <style name="tv_forgot_password_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:text">@string/forgot_password</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">110dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">fill</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <!--Forgot Password -->

    <style name="tv_forgot_password">
        <item name="android:text">@string/forgot_ur_password</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="text_input_forgot_password">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_marginRight">72dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="key_image_style">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="container_forgot_password_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">235dp</item>
    </style>
    <style name="btm_container_forgot_password_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="forgot_pwd_subTitle_style">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/forgot_password_title</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_marginRight">72dp</item>
    </style>

    <style name="tv_please_enter_email_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#959595</item>
        <item name="android:text">@string/title_forgot_password_dialog</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="et_forgot_password_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/hint_email_id</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="btn_confirm_forgot_password">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/forgot_pwd_btn</item>
        <item name="android:text">@string/send</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/btn_font_color</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- ***Splash Screen Logo** -->
    <style name="splash_logo_style">
        <item name="android:layout_width">396dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:src">@drawable/splash_logo</item>
    </style>

    <!-- Styles related to the signature layout -->
    <style name="signature_canvas_layout_style">
        <item name="android:padding">1dp</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:layout_marginBottom">43dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
    </style>
    <style name="signature_btn_lay_sty">
        <item name="android:layout_marginTop">15dp</item>
    </style>
    <style name="signature_action_btn_sty">
        <item name="android:layout_marginLeft">55dp</item>
        <item name="android:layout_marginRight">55dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>

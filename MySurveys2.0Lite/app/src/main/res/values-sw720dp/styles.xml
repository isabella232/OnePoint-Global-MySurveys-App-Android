<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="container_forgot_password_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">410dp</item>
    </style>

    <style name="key_image_style">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="tv_forgot_password">
        <item name="android:text">@string/forgot_ur_password</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="btm_container_forgot_password_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="forgot_pwd_subTitle_style">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/forgot_password_title</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:layout_marginTop">180dp</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_marginRight">72dp</item>
    </style>

    <style name="text_input_forgot_password">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">56dp</item>
        <item name="android:layout_marginBottom">56dp</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_marginRight">72dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="et_forgot_password_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/hint_email_id</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="btn_confirm_forgot_password">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/forgot_pwd_btn</item>
        <item name="android:text">@string/send</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">45dp</item>
        <item name="android:paddingRight">45dp</item>
        <item name="android:layout_marginBottom">170dp</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/btn_font_color</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- Styles related to the signature layout -->
    <style name="signature_canvas_layout_style">
        <item name="android:padding">1dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginBottom">100dp</item>
        <item name="android:layout_marginLeft">70dp</item>
        <item name="android:layout_marginRight">70dp</item>
    </style>
    <style name="signature_btn_lay_sty">
        <item name="android:layout_marginTop">35dp</item>
    </style>
    <style name="signature_action_btn_sty">
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:padding">35dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
